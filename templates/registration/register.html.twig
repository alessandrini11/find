{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="bg-gradient-to-r to-[#5A72EA] from-[#8468B1]">
        <div class="container">
            <div class="space-y-10 py-5">
                <div class="text-white space-y-10">
                    <h1 class="text-2xl lg:text-6xl text-center font-bold ">Créez votre compte</h1>
                </div>
            </div>
        </div>
        <div class="hidden md:flex justify-end">
            <div id="first-triangle" class="">

            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="mt-5">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
            </div>
            <div class="flex justify-center items-center py-10">
                <div class="space-y-2 w-full lg:w-2/3">
                    <div class="flex">
                        <a href="{{ path('connect_google') }}" class="rounded-lg  bg-gray-50 border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5">
                            <img class="h-5 mx-auto" src="{{ asset('assets/image/search.png') }}" alt="">
                        </a>
                    </div>
                    <div class="flex justify-between items-center space-x-2">
                        <div class="flex-1">
                            <hr>
                        </div>
                        <span class="">ou</span>
                        <div class="flex-1">
                            <hr>
                        </div>
                    </div>
                    {{ form_start(registrationForm, {'attr': {'class': 'space-y-3'}}) }}
                    {{ form_rest(registrationForm) }}
                    <button type="submit" class="focus:outline-none text-white bg-[#5A72EA] hover:bg-[#2d4ce7] focus:ring-4 focus:ring-[#7f8ed8] font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 w-full">Inscription</button>
                    {{ form_end(registrationForm) }}
                    <div class="pt-5 text-center">
                        <a href="{{ path('app_login') }}" class="text-primary underline">Déjà inscrit? connectez-vous</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
