<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.2/flowbite.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/image/favicon.png') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="bg-gray-100 min-h-screen">
    <nav class="bg-gradient-to-r to-[#5A72EA] from-[#8468B1] text-white">
        <div class="w-11/12 mx-auto relative">
            <div  class="absolute -right-2 top-32 md:top-16">
                <div id="floating-menu" class="text-[#212529] bg-white border hidden">
                    <ul class="text-sm">
                        <li class="border-b hover:bg-blue-500 hover:text-white text-center capitalize"><a class="p-4 block" href={{path('app_dashboard_profile')}}>compte</a></li>
                        <li class="hover:bg-blue-500 hover:text-white text-center capitalize"><a class="p-4 block" href={{ path('app_logout')}}>déconnexion</a></li>
                    </ul>
                </div>
            </div>
            <div class="flex justify-between items-center py-5">
                <a title="home" href="{{ path('app_home') }}">
                    <img class="h-5 lg:h-20" src="{{ asset('assets/image/favicon.png') }}" alt="logo">
                </a>
                <ul class="hidden md:space-x-5 lg:flex items-center justify-between mt-7 md:mt-0 ">
                    <li><a class="" href="{{path('app_dashboard')}}">Dashboard</a></li>
                    <li><a class="" href="{{path('app_document_index')}}">Documents</a></li>
                    <li><a href="{{path('app_declaration_index')}}" class="">Déclarations</a></li>
                    <li><a href="{{path('app_archive_index')}}" class="">Archives</a></li>
                    <li><a href="{{path('app_transaction_index')}}" class="">Transactions</a></li>
                    <li><span id="profile-icon" class="border-[#a4b0bf] rounded-full h-7 w-7 border flex items-center justify-center cursor-pointer"><i class="fa-solid fa-user text-sm"></i></span></li>
                </ul>
                <button id="openMenu" type="button" class="lg:hidden inline-flex items-center p-2 ml-3 text-sm text-blue-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-100 ">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                </button>
            </div>
        </div>
    </nav>
    <div id="mobileMenu" class="h-screen bg-black/10 fixed top-0 left-0 w-full text-blue-100 transform -translate-x-full transition-transform ease-in-out duration-100 z-0">
        <div class="bg-gradient-to-r to-[#5A72EA] from-[#8468B1] w-1/2 p-7">
            <ul class="flex justify-between items-center text-white">
                <li>
                    <a title="home" href="{{ path('app_home') }}">
                        <img class="h-10 lg:h-20" src="{{ asset('assets/image/favicon.png') }}" alt="logo">
                    </a>
                </li>
                <li>
                    <span id="closeMenu" class="cursor-pointer">
                        <svg class="h-8" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                          </svg>
                    </span>
                </li>
            </ul>
            <div class="flex mt-7 h-screen ">
                <ul class="space-y-5">
                    <li><a class="" href="{{path('app_dashboard')}}">Dashboard</a></li>
                    <li><a class="" href="{{path('app_document_index')}}">Documents</a></li>
                    <li><a href="{{path('app_declaration_index')}}" class="">Déclarations</a></li>
                    <li><a href="{{path('app_archive_index')}}" class="">Archives</a></li>
                    <li><a href="{{path('app_transaction_index')}}" class="">Transactions</a></li>
                    <li><a href="{{path('app_dashboard_profile')}}" class="">Profile</a></li>
                    <li><a href="{{ path('app_logout') }}" class="text-primary bg-white font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none">logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="bg-white">
        <div class="w-11/12 mx-auto">
            <div class="py-3 text-sm">
                <span class="uppercase font-semibold"><a href={{path('app_dashboard')}} >dashboard</a></span>
                {% if page_name is defined and page_name != null %} <span class="text-gray-600 font-semibold"> > <a href= {{path( page_route )}} >{{page_name}}</a> </span> {% endif %}
                {% if sub_page is defined and sub_page != null %} <span class="text-gray-600 font-semibold"> > <a href={{ path(sub_route, {id: 1})}} class="">{{sub_page}}</a> </span> {% endif %}
                {% if entity_id is defined and entity_id != null %} <span class="text-gray-600 font-semibold"> > {{entity_id}} </span> {% endif %}
            </div>
        </div>
    </div>

    <main>
        {% block body %}{% endblock %}
    </main>
</div>
</body>
</html>
