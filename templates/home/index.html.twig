{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <main class="overflow-hidden">
        <section class="bg-gradient-to-r to-[#5A72EA] from-[#8468B1]">
            <div class="container">
                <div class="space-y-10 py-20">
                    <div class="text-white space-y-10">
                        <h1 class="text-2xl lg:text-6xl text-center font-bold ">Effectuer une recherche avant de debuter</h1>
                    </div>
                    <div class="space-y-10">
                        {{ form_start(form) }}
                            <div class="relative h-14">
                                {{ form_widget(form.query) }}
                                <button aria-label="search" type="submit" class="absolute inset-y-0 right-0 flex items-center pr-3">
                                    <i class="fa-sharp fa-solid fa-magnifying-glass w-full h-5 text-gray-500 dark:text-gray-400"></i>
                                </button>
                            </div>
                        {{ form_end(form) }}
                        <div class="flex justify-center text-white">
                            <a href="{{ path('app_declaration_new') }}" class="uppercase px-2 py-2 border border-white rounded-md">déclarer un document</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="hidden md:flex justify-end">
                <div id="first-triangle" class="">

                </div>
            </div>
        </section>
        <section class="py-10">
            <div class="">
                <div class="overflow-x-hidden">
                    <h3 class="text-2xl uppercase text-center mb-3">nos partenaires clés</h3>
                    <div id="parterners" class="flex justify-between items-center gap-3">
                        <div class="">
                            <img src="{{ asset('assets/image/cud.png') }}" class="mx-auto md:h-48" alt="">
                        </div>
                        <div class="">
                            <img src="{{ asset('assets/image/cuy.png') }}" class="mx-auto" alt="">
                        </div>
                        <div class="">
                            <img src="{{ asset('assets/image/cud.png') }}" class="mx-auto md:h-48" alt="">
                        </div>
                        <div class="">
                            <img src="{{ asset('assets/image/cue.png') }}" class="mx-auto md:h-48" alt="">
                        </div>
                        <div class="">
                            <img src="{{ asset('assets/image/cud.png') }}" class="mx-auto md:h-48" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-[#D9DFFF] py-10 relative">
            <div class="container">
                <h1 class="text-3xl text-center">Quelques témoignage de nos utilisateurs</h1>
                <div class="w-full lg:w-4/6 mx-auto">
                    <div class="mt-5">
                        <div class="gap-5 slick">
                            {% for comment in comments %}
                                <div class="ml-8 mr-8 bg-white p-4 rounded space-y-2">
                                    <div class="lg:flex">
                                        <p class="mr-5">{{ comment.user.firstname }} {{ comment.user.lastname }}</p>
                                        <div class="font-thin ">
                                            {% for i in  range(1,5) %}
                                                <span class="{% if i <= comment.notation %} text-[goldenrod] {% endif %}"><i class="fa fa-star"></i></span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="space-y-2 text-[#5A5A5A]">
                                        <p class=" ">{{ comment.content }}</p>
                                        <p class="flex items-center"><i class="fas fa-clock"></i> <span class="ml-2">{{ comment.createdAt | date(' d M y') }}</span></p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="hidden lg:block absolute bg-gradient-to-r to-[#5A72EA] from-[#8468B1] h-[120px] w-[120px] rounded-full -top-[60px] -right-[60px]"></div>
            <div class="hidden lg:block absolute bg-gradient-to-r to-[#5A72EA] from-[#8468B1] h-[120px] w-[120px] rounded-full -bottom-[60px] -left-[60px] z-10"></div>
        </section>
    </main>
{% endblock %}
